export const TagPage = `---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const tags = new Set(posts.flatMap(p => p.data.tags || []));
  return [...tags].map(tag => ({ params: { tag } }));
}

const { tag } = Astro.params;
const posts = (await getCollection('posts')).filter(p => (p.data.tags||[]).includes(tag));
---
<Base title={` + "`标签：${tag} — WON96 Blog`" + `}>
  <h1 class="text-2xl font-semibold mb-6">标签：{tag}</h1>
  <ul class="space-y-4">
    {posts.map(p => (<li><a class="hover:underline" href={`/posts/${p.slug}`}>{p.data.title}</a></li>))}
  </ul>
</Base>`;
